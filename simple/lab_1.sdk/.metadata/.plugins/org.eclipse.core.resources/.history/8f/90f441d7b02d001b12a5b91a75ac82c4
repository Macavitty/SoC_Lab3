#include "platform.h"
#include <xil_io.h>
#include <stdio.h>
#include <math.h>

#define DEBUG_MODE 1

#define ADDR_GPIO	0x40000000

float _abs(float a){
	if (a < 0)
		a *= -1;
	return a;
}

int ln(float x, float *y){
	if (x < 0)
		return -1;

	float res = 0;
	float a = 0;
	float b = (x - 1) / (x + 1);
	int k = 1;
	float pow_b = b;

	while (_abs(a = pow_b / k) > 1e-6){
		res += a;
		k += 2;
		pow_b *= b * b;
	}

	*y = res * 2;
	return 0;
}

void _log2(float x, float *y){
	const float LN2 = 0.69314718056;
	ln(x, y);
	*y /= LN2;
}

int main() {

	init_platform();

	float x[] = {0.5, 2.0, 8.0, 13.0};
	union {
		float f;
		int32_t i; } res, real_res;

	for (int j = 0; j < 4; j++){
		Xil_Out32(ADDR_GPIO, 0xffff);
		_log2(x[j], &res.f);
		Xil_Out32(ADDR_GPIO, res.i);

		fprintf(stdout, "*******************************************\n");
		float err = 100 * _abs(2 * (res.f - real_res.f)/(res.f + real_res.f));
		real_res.f  = log2(x[j]);
		fprintf(stdout, "_log2(%f) = %f, log2(%f) = %f, err = %f\n", x, res.f, x, real_res.f, err);
		fprintf(stdout, "*******************************************\n");
	}

	cleanup_platform();

  return 0;
}
